{
  "env": {
    "amd": false,
    "applescript": false,
    "atomtest": false,
    "browser": true,
    "commonjs": false,
    "embertest": false,
    "es6": true,
    "greasemonkey": false,
    "jasmine": false,
    "jest": false,
    "jquery": false,
    "meteor": false,
    "mocha": false,
    "mongo": false,
    "nashorn": false,
    "node": true,
    "phantomjs": false,
    "prototypejs": false,
    "protractor": false,
    "qunit": false,
    "serviceworker": false,
    "shared-node-browser": false,
    "shelljs": false,
    "webextensions": false,
    "worker": false
  },
  "extends": ["airbnb", "eslint-config-alloy/react", "plugin:prettier/recommended", "prettier/react"],
  "globals": {
    "BASE_HOST": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react-hooks", "prettier"],
  "root": true,
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "ignore": ["^@/", "^umi/"]
      }
    ],
    "import/no-unresolved": [
      "error",
      {
        "ignore": ["^@/", "^umi/"]
      }
    ],
    "import/prefer-default-export": "off",
    "import/order": [
      "error",
      {
        "groups": ["builtin", "external", "internal", "parent", "sibling", "index"],
        "newlines-between": "always"
      }
    ],
    "jsx-a11y/click-events-have-key-events": "off",
    "jsx-a11y/no-noninteractive-element-interactions": "off",
    "prettier/prettier": "error",
    "react-hooks/rules-of-hooks": "error",
    "react/forbid-component-props": [
      "error",
      {
        "forbid": ["id", "style"]
      }
    ],
    "react/forbid-dom-props": [
      "error",
      {
        "forbid": ["id", "style"]
      }
    ]
  }
}
